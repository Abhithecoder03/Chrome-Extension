{
    "manifest_version": 2,
    "name": "Domain API Caller",
    "version": "1.0",
    "description": "Make an API call with the current domain name.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ]
  }
  